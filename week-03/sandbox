const aThumb = document.getElementById("thumbnail-3")
const bThumb = document.getElementById("thumbnail-4")
const cThumb = document.getElementById("thumbnail-5")
const dThumb = document.getElementById("thumbnail-6")

// 3Ô∏è‚É£ Define a reusable function that changes the hero image source
function changeHeroImage(newSrc) {
  hImage.src = newSrc
}

// 4Ô∏è‚É£ Add click listeners so each thumbnail changes to its matching hero image
aThumb.addEventListener("click", () => changeHeroImage("images/summer25-03-a-dam.jpg"))
bThumb.addEventListener("click", () => changeHeroImage("images/summer25-04-a-dam.jpg"))
cThumb.addEventListener("click", () => changeHeroImage("images/summer25-05-molly.jpg"))
dThumb.addEventListener("click", () => changeHeroImage("images/summer25-06-paris.jpg"))

