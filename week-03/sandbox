*Option C

// 1Ô∏è‚É£ Get all key elements
const hImage = document.getElementById("heroImage");
const thumbnails = document.querySelectorAll(".thumbnail");
const playBtn = document.getElementById("playSlideshow");
const pauseBtn = document.getElementById("pauseSlideshow");

// 2Ô∏è‚É£ Store all hero image paths that match your thumbnails
const heroImages = [
  "images/summer25-03-a-dam.jpg",
  "images/summer25-04-a-dam.jpg",
  "images/summer25-05-molly.jpg",
  "images/summer25-06-paris.jpg"
];

// 3Ô∏è‚É£ Start on the first image
let currentIndex = 0;
let slideshowInterval = null;

// 4Ô∏è‚É£ Function: change hero image
function showImage(index) {
  hImage.src = heroImages[index];
}

// 5Ô∏è‚É£ Function: start the slideshow
function startSlideshow() {
  // Avoid duplicate intervals
  if (slideshowInterval) return;

  slideshowInterval = setInterval(() => {
    currentIndex = (currentIndex + 1) % heroImages.length;
    showImage(currentIndex);
  }, 3000); // every 3 seconds
}

// 6Ô∏è‚É£ Function: stop the slideshow
function pauseSlideshow() {
  clearInterval(slideshowInterval);
  slideshowInterval = null;
}

// 7Ô∏è‚É£ Thumbnail click behavior
thumbnails.forEach((thumb, index) => {
  thumb.addEventListener("click", () => {
    currentIndex = index;      // match clicked thumbnail
    showImage(currentIndex);   // update hero image immediately
    pauseSlideshow();          // pause slideshow so user can view their choice
  });
});

// 8Ô∏è‚É£ Button controls
playBtn.addEventListener("click", startSlideshow);
pauseBtn.addEventListener("click", pauseSlideshow);

// 9Ô∏è‚É£ Start automatically on page load
startSlideshow();

