*Option B

// 1Ô∏è‚É£ Get the main hero image
const hImage = document.getElementById("heroImage")

// 2Ô∏è‚É£ Select *all* thumbnails that share the same class
const thumbnails = document.querySelectorAll(".thumbnail")

// 3Ô∏è‚É£ Loop through each thumbnail
thumbnails.forEach((thumb) => {
  thumb.addEventListener("click", () => {
    // 4Ô∏è‚É£ Build the corresponding hero image path
    // Removes "-Thumb" from filename to get the full image name
    const newSrc = thumb.src.replace("-Thumb", "")
    // 5Ô∏è‚É£ Update hero image
    hImage.src = newSrc
  })
})

