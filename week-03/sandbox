  hImage.src = newSrc
}

let toggleImage = () => 
{
  console.log(hImage.src)
  if(hImage.src.includes("summer25-03")) {
    hImage.src = "images/summer25-04-a-dam.jpg"
    hImage.src = "images/summer25-05-molly.jpg"
    hImage.src = "images/summer25-06-paris.jpg"
  }
  else {
    hImage.src = "images/summer25-03-a-dam.jpg"
  }
}

setInterval(toggleImage, 1350)

